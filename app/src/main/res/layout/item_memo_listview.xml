<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/memo_listview_item_iv"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/memo_listview_item_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/memo_listview_item_iv"
        android:layout_toEndOf="@+id/memo_listview_item_iv" />

    <TextView
        android:id="@+id/memo_listview_item_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/memo_listview_item_iv"
        android:layout_toRightOf="@+id/memo_listview_item_iv"
        android:layout_toEndOf="@+id/memo_listview_item_iv" />


</RelativeLayout>